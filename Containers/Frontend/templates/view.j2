<!-- Body -->
<body>
    <h2>ToDo list</h2>
    <table>
        <tr>
            <th>Status</th>
            <th>Description</th>
        </tr>
        {% for item in todo %}
        <tr>
            {% if item[0] == True %}
                <td>[x]</td>
            {% else %}
                <td>[ ]</td>
            {% endif %}
            <td>{{ item[1] }}</td>
        </tr>
        {% endfor %}
    </table>
</body>